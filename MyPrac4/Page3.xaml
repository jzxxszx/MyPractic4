<Page x:Class="MyPrac4.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3" FontFamily="Candara" FontSize="14">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите номер элемента окружности (1-4):" Margin="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="numbokrbox" Width="50" Margin="16" Height="22"/>
            <TextBlock Text="Введите значение элемента:" Margin="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="elementbox" Width="50" Margin="16" Height="22"/>
            <Button Content="Вычислить" Click="Button_Click" Width="100" Height="22"/>
            <TextBox x:Name="Answer" Margin="16" Height="120" Width="150" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Page>
