<Page x:Class="MyPrac4.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2" FontFamily="Candara" FontSize="14">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите номер карты (6-14):" Margin="16" FontWeight="Bold"/>
            <TextBox x:Name="numberbox" Width="50" Margin="16" Height="22"/>
            <TextBlock Text="Введите номер масти карты (1-4):" Margin="16" FontWeight="Bold" />
            <TextBox x:Name="mastbox" Width="50" Margin="16" Height="22"/>
            <Button Content="Показать название карты" Click="Button_Click" Width="170"/>
            <TextBox x:Name="Answer" Margin="16" Height="32" Width="150" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Page>
