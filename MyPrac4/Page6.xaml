<Page x:Class="MyPrac4.Page6"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page6" FontFamily="Candara" FontSize="14">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите целое число N:" Margin="16" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="inputN" Margin="16" Height="32" Width="120"/>

            <Button Content="Вывести цифры" Margin="16" Click="Button_Click" Height="42" Width="110"/>

            <TextBox x:Name="Answer" Margin="16" Width="150" Height="62" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Page>
