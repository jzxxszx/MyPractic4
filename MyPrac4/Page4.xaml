<Page x:Class="MyPrac4.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4" FontFamily="Candara" FontSize="14">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите длину отрезка A:" Margin="16" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="inputA" Margin="16" Width="50" Height="22"/>

            <TextBlock Text="Введите длину отрезка B:" Margin="16" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="inputB" Margin="16" Height="22" Width="50"/>

            <Button Content="Рассчитать" Margin="16" Height="32" Width="100" Click="Button_Click"/>

            <TextBox x:Name="Answer" Margin="16" Height="40" Width="150" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Page>
