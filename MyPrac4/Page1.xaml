<Page x:Class="MyPrac4.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1" FontFamily="Candara" FontSize="14">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Введите номер дня недели (1-7):" Margin="16" FontWeight="Bold"/>
            <TextBox x:Name="daybox" Width="50" Margin="16" Height="22"/>
            <TextBox x:Name="Answer" Margin="16" Height="32" IsReadOnly="True"/>
            <Button Content="Вычислить" Click="Button_Click" Margin="16" Width="100" Height="42"/>
        </StackPanel>
    </Grid>
</Page>
